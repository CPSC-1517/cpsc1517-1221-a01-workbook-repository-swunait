@page
@model NhlWebApp.Pages.NhlPlayersModel
@{
}
<h1>NHL Player List</h1>
@{
    if(Model.PlayerList.Count > 0) 
    {
        <table class="table table-dark table-striped">
            <thead>
                <th>PlayerNo</th>
                <th>Player Name</th>
                <th>Position</th>
                <th>GP</th>
                <th>Goals</th>
                <th>Assists</th>
                <th>Points</th>
            </thead>
            <tbody>
                @foreach(var currentPlayer in Model.PlayerList) 
                {
                    <tr>
                        <td>@currentPlayer.PlayerNo</td>
                        <td>@currentPlayer.Name</td>
                        <td>@currentPlayer.Position</td>
                        <td>@currentPlayer.GamesPlayed</td>
                        <td>@currentPlayer.Goals</td>
                        <td>@currentPlayer.Assists</td>
                        <td>@currentPlayer.Points</td>
                    </tr>
                }
            </tbody>
        
        </table>
    }
}