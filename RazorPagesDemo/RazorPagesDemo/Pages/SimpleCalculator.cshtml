@page
@model RazorPagesDemo.Pages.SimpleCalculatorModel
@{
}
<h1>Simple Calculator</h1>

@if(Model.InfoMessage != null)
{

    <div class="alert alert-info">
        @Model.InfoMessage
    </div>
}
@if(Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="row">
      <div class="col">
        <label asp-for="CurrentCalculator.Num1">Number 1</label>
        <input asp-for="CurrentCalculator.Num1" />
      </div>
      <div class="col">
        <label asp-for="CurrentCalculator.Num2">Number 2</label>
        <input asp-for="CurrentCalculator.Num2" />
    </div>
    <div class="row">
        <div class="col">
            <button type="submit" asp-page-handler="Add" class="btn btn-primary"> + </button>
        </div>
        <div class="col">
            <button type="submit" asp-page-handler="Subtract" class="btn btn-primary"> - </button>
        </div>
        <div class="col">
            <button type="submit" asp-page-handler="Multiply" class="btn btn-primary"> x </button>
        </div>
        <div class="col">
            <button type="submit" asp-page-handler="Divide" class="btn btn-primary"> / </button>
        </div>
    </div>
</div>
</form>